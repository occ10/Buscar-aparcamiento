<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.walid.tfg.SearchUserActivity">

    <ProgressBar
        android:id="@+id/searchUserrogress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="15pt" />

        <AutoCompleteTextView
            android:id="@+id/searchUserNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ejemplo: Juan"/>
        <Button
            android:id="@+id/searchUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origen:"
            android:textSize="15pt"/>

        <AutoCompleteTextView
            android:id="@+id/searchUserOriginInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ejemplo: Elche"/>
        <Button
            android:id="@+id/searchUserOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:textSize="15pt"/>

        <AutoCompleteTextView
            android:id="@+id/searchUserPhoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ejemplo: 654987321"/>
        <Button
            android:id="@+id/searchUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"/>

    </LinearLayout>
</LinearLayout>
