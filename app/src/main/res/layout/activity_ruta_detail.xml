<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.walid.tfg.RutaDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="10pt"
                android:text="@string/info_travel" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10pt"
                android:paddingBottom="10pt"
                android:background="@drawable/border_bottom"
                android:layout_marginTop="10pt">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salida:" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10pt"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="TextView"/>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10pt"
                    android:layout_below="@+id/textView1"
                    android:text="Precio:" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10pt"
                    android:layout_alignTop ="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:text="TextViewuuuu"/>
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10pt"
                    android:layout_below="@+id/textView3"
                    android:text="Plazas:" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10pt"
                    android:layout_alignTop ="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:text="TextViewuuuu"/>
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10pt"
                    android:layout_below="@+id/textView5"
                    android:text="Fecha Publicacion:" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10pt"
                    android:layout_alignTop ="@+id/textView7"
                    android:layout_toRightOf="@+id/textView7"
                    android:text="TextViewuuuu"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="10pt"
                android:text="@string/conductor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10pt"
                android:paddingLeft="10pt"
                android:paddingBottom="10pt"
                android:background="@drawable/border_bottom">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/unkonwnfoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="10pt"
                android:text="@string/coche" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10pt"
                android:paddingBottom="10pt"
                android:background="@drawable/border_bottom"
                android:layout_marginTop="10pt"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/unkonwnfoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="usuario" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="usuario" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="usuario" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="10pt"
                android:text="@string/actividades" />
            <TextView
                android:id="@+id/lin_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lin_to_perfil"
                android:paddingLeft="10pt"
                android:layout_marginTop="05pt"
                android:textColor="#337AB7"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
